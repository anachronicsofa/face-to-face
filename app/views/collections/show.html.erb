<h1 class="page-title"><%= @collection.name %> </h1>
<h3 id="notice"><%= notice %></h3>

  <div class="btn_container">
    <div class="form_container medium">
      <%= simple_form_for @face do |f| %>
        <%= f.input :name, required: true, input_html: { class: 'text_input', maxlength: 15 } %>
        <%= f.input :image, label: 'Link da imagem: ', input_html: { class: 'text_input' } %>
        <%= f.hidden_field :collection_id, value: @collection.id %>
        <div class="buttons">
          <%= f.button :submit, 'Criar Face', :class => "button_form"%>
        </div>
      <% end %>
    </div>
  </div>

<div class="table_container">
  <table class="table">
    <thead>
      <tr>
        <th> Name </th>
        <th> Link da Imagem </th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>   
      <% @collection.faces.each do |face| %>
        <tr>
          <td><%= face.name %></td>
          <td><%= face.image if !face.image.nil? %></td>
          <td><%= link_to 'âœŽ', edit_face_path(face), class: 'btn btn--discrete' %></td>
          <td><%= link_to 'Destroy', face, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>