<h1 class="page-title"> Coleções </h1>
<h3 id="notice"><%= notice %></h3>
  <div class="btn_container">
    <%= link_to 'Criar Collection', new_collection_path, class: "btn btn--link" %>
  </div>

<div class="table_container">
  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Tema</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @collections.each do |collection| %>
        <tr>
          <td><%= collection.name %></td>
          <td><%= collection.theme %></td>
          <td><%= link_to '✎', edit_collection_path(collection), class: 'btn btn--discrete' %>
          <%= link_to '◔◔', collection_path(collection), class: 'btn btn--show'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
