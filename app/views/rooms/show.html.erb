<h1 class="page-title"> Room: <%= @room.name %> </h1>

<div class="container">  
  <div class="grid grid--auto-fill">
    <% @collection.faces.each do |face| %>
      <div class="grid__item"> 
        <% if !face.image.nil? %>
          <%= image_tag(face.image, :style => 'border-radius: 12px; width:180px; height:180px;')%>
        <% else %>
          <%= image_tag('https://roadie-metal.com/wp-content/uploads/2019/06/unknownpleasures.jpg', :style => 'border-radius: 12px; width:180px; height:180px;')%>
        <% end %>

        <div class="H1toH5">
          <label>
            <input type="checkbox" />
            <span class="seatButton"><%= face.name %></span>
          </label>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="image_container">
  <h2 style="margin-left:42%"> Você é: </h2>
  <p><%= image_tag(@your_image, :style => 'border-radius: 12px; width:180px; height:180px;')%>
</div>